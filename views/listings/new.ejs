<% layout('/layouts/boilerplate') -%>

<div class="row">
<div class="col-8 offset-2 mt-3">
<body>

    <h3>Create new Listing</h3>
    <form action="/listings" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">

        <div class="mb-3">
            <label for="title">Title</label>
            <input class="form-control" type="text" name="listing[title]" placeholder="Enter title" reuired>
            <div class="valid-feedback">Tittle looks Good</div>
        </div>

        <div class="mb-3">
            <label for="description">Descrption</label>
            <textarea class="form-control" type="text" name="listing[description]" placeholder="Enter description" required></textarea>
        </div>

        <div class="mb-3">
            <label for="image">Upload image</label>
            <input class="form-control" type="file" name="listing[image]" >
        </div>

        <div class="row">
            <div class="mb-3 col-md-4 col-lg-4">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="listing[price]" placeholder="Enter price" required>
                <div class="invalid-feedback">Enter Valid Price</div>
            </div>
    
            <div class="mb-3 col-md-8 col-lg-8">
                <label for="country">Country</label>
                <input class="form-control" type="text" name="listing[country]" placeholder="Enter country" required>
                <div class="invalid-feedback">Enter valid Country</div>
            </div>
        </div>
        
        
        <div class="mb-3">
            <label for="location">Location</label>
            <input class="form-control" type="text" name="listing[location]" placeholder="Enter location" required>
            <div class="invalid-feedback">Enter valid Location</div>
        </div>

        <br>
        <button class="btn btn-dark mt-3">Add</button>
        <br><br>
    </form>
</body>
</div>
</div>