<% layout('/layouts/boilerplate') -%>

<div class="row">
<div class="col-8 offset-2 mt-3">
    <!-- <body> -->
        <h3>Edit Listing</h3>
        <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input class="form-control" type="text" name="listing[title]" value="<%= listing.title %>">
            </div>
    
            <div class="mb-3">
                <label for="description" class="form-label">Descrption</label>
                <textarea class="form-control" type="text" name="listing[description]" ><%= listing.description %></textarea>
            </div>

            <div class="mb-3">
                <img class="show-img" src="<%= listing.image.url %>" alt="">
            </div>
    
            <div class="mb-3">
                <label for="image" class="form-label">Upload new image</label>
                <input class="form-control" type="file" name="listing[image]">
            </div>
    
            <div class="row">
                <div class="mb-3 col-md-4 col-lg-4">
                    <label for="price" class="form-label">Price</label>
                    <input class="form-control" type="number" name="listing[price]" value="<%= listing.price %>">
                </div>
        
                <div class="mb-3 col-md-8 col-lg-8">
                    <label for="country" class="form-label">Country</label>
                    <input class="form-control" type="text" name="listing[country]" value="<%= listing.country %>">
                </div>
            </div>
    
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input class="form-control" type="text" name="listing[location]" value="<%= listing.location %>">
            </div>
    
            <button class="btn btn-dark mb-3">Add</button>
        </form>
    <!-- </body> -->
</div>
</div>
